<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Threshold Calculator"
        android:textSize="27sp" />

    <TableLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/TableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxWidth="150dp"
                android:singleLine="false"
                android:text="Week of bloom" />

            <EditText
                android:id="@+id/tfWeekOfBloom"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:text="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/TableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxWidth="150dp"
                android:singleLine="false"
                android:text="Number of bolls sampled" />

            <EditText
                android:id="@+id/tfNumBolls"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:text="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/TableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxWidth="150dp"
                android:singleLine="false"
                android:text="Damaged bolls" />

            <EditText
                android:id="@+id/tfDamagedBolls"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/TableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxWidth="150dp"
                android:singleLine="false"
                android:text="Treatment threshold" />

            <TextView
                android:id="@+id/tvTreatmentThreshold"
                style="@style/TableTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="50%" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/TableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxWidth="150dp"
                android:singleLine="false"
                android:text="Your damage" />

            <TextView
                android:id="@+id/tvYourDamage"
                style="@style/TableTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="100%" />
        </TableRow>
    </TableLayout>

    <TextView
        style="@style/TableTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:text="Input the following to determine your internal damage to 1-inch diameter bolls meets the treatment threshold:" />

</LinearLayout>